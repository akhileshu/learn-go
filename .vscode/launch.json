  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    },
    {
      "name": "Launch Package (No Opt)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "buildFlags": "-gcflags=\"all=-N -l\""
      /*
      -N → no optimizations

-l → no inlining

variables stay visible

stepping behaves sanely
      */
    },
    {
      "name": "Debug Go Benchmark",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      /*
  -test.run=^$ → run no tests

-test.bench=. → run all benchmarks
  */
      "args": ["-test.run=^$", "-test.bench=."]
    }
  ]
}
